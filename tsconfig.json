{
  "compilerOptions": {
    "target": "ES2022",
    "module": "NodeNext",
    "declaration": true,
    "sourceMap": true,
    "outDir": "./out",
    "rootDir": "./src",
    "strict": true,
    "noImplicitAny": false,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "src/typings",
      "./node_modules/@types"
    ],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
  },
  "include": [
    "env.d.ts",
    "src/**/*.ts",
  ],
  "exclude": [
    "node_modules",
  ]
}
